<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.univr.studyholiday.controller.StudentMenuController">

    <children>
        <VBox prefHeight="400.0" prefWidth="600.0">
            <children>
                <HBox>
                    <children>
                  <Region HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Region>
                        <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="74.0" prefWidth="385.0" text="Schermata studente" textAlignment="CENTER">
                            <font>
                                <Font size="36.0" />
                            </font>
                            <padding>
                                <Insets bottom="20.0" top="10.0" />
                            </padding>
                        </Label>
                  <Region HBox.hgrow="ALWAYS" />
                    </children>
                </HBox>
                <HBox>
                    <children>
                        <Button fx:id="viaggiButton" mnemonicParsing="false" onAction="#viaggiButtonAction" text="Visualizza viaggi">
                            <HBox.margin>
                                <Insets bottom="20.0" left="20.0" top="10.0" />
                            </HBox.margin>
                        </Button>
                    </children>
                </HBox>
                <HBox layoutX="10.0" layoutY="84.0">
                    <children>
                        <Button fx:id="profiloButton" mnemonicParsing="false" onAction="#profiloButtonAction" text="Visualizza profilo">
                            <HBox.margin>
                                <Insets bottom="20.0" left="20.0" top="10.0" />
                            </HBox.margin>
                        </Button>
                    </children>
                </HBox>
                <HBox layoutX="10.0" layoutY="192.0">
                    <children>
                        <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#logoutButtonAction" text="Logout">
                            <HBox.margin>
                                <Insets bottom="20.0" left="20.0" top="10.0" />
                            </HBox.margin>
                        </Button>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>

</AnchorPane>
